{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@now/node"
      },
      {
          "src": "public/**",
          "use": "@now/static"
      }
    ],
    "routes": [
      {"handle": "filesystem"},
      {
        "src": "/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/",
        "dest": "public/index.html"
      },
      {
        "src": "/(.+)",
        "dest": "public/$1"
      }
    ]
  }